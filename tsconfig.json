{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop":true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "types": ["react", "react-dom","powerbi-visuals-api"],
        "jsx": "react",

        "outDir": "./.tmp/build/",
        "moduleResolution": "node",
        "declaration": true,
        "module": "ESNext",
        "lib": [
            "es2019",
            "dom"
        ]

    },
    "include": ["src/*/", "src/Components/data.tsx"],
    "exclude": ["node_modules","tailwind.config.js"],

    "files": [
        "./src/visual.ts"
    ]
}